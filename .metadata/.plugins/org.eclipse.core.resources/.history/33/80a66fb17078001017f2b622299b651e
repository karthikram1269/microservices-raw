package com.wipro.gp.client;

import lombok.RequiredArgsConstructor;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Component;

import org.springframework.web.reactive.function.client.WebClient;

@Component
@RequiredArgsConstructor
public class DoctorServiceClient {

    private final WebClient webClient;

    @Value("${services.doctor.base-url:http://localhost:8089/api/v1/doctors}")
    private String doctorBaseUrl;

    public DoctorProfile getDoctor(Long doctorId) {
        return webClient.get()
                .uri(doctorBaseUrl + "/{id}", doctorId)
                .retrieve()
                .bodyToMono(DoctorProfile.class)
                .block(); // fine for simple sync use; switch to reactive if needed
    }
}